.content-right-body
  .content-right-body__box1
    .content-right-body__box1--message1
      = message.user.name
    .content-right-body__box1--message2 
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .content-right-body__box2
    - if message.content.present?
      .content-right-body__box2--message1 
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?


  
  